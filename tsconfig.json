{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./packages",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "exactOptionalPropertyTypes": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@123pan/core": ["./packages/core/src"],
      "@123pan/file": ["./packages/file/src"],
      "@123pan/share": ["./packages/share/src"],
      "@123pan/offline": ["./packages/offline/src"],
      "@123pan/user": ["./packages/user/src"],
      "@123pan/direct-link": ["./packages/direct-link/src"],
      "@123pan/image": ["./packages/image/src"],
      "@123pan/video": ["./packages/video/src"]
    }
  },
  "include": [
    "packages/*/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "packages/test-server",
    "packages/demo",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
